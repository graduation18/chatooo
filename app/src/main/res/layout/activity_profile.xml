<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">






    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#fff">


        <!-- Cover Image -->

    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/banner1" />



        <!-- Round image -->

        <com.alexzh.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/pro2"
            android:layout_marginTop="75dp"
            android:layout_gravity="center"
            app:view_borderWidth="2dp"
            app:view_borderColor="#cccccc" />


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">



        <com.example.gaber.translation_chat.custom.MyTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ahmad Ahmad"
            android:textSize="22dp"
            android:textColor="@color/title_color"
            android:layout_gravity="center"/>

        <com.example.gaber.translation_chat.custom.MyTextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Syracuse, New York"
            android:layout_gravity="center"
            android:textColor="@color/title_color"
            android:textSize="14dp"/>

        <com.example.gaber.translation_chat.custom.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--------"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

        <com.example.gaber.translation_chat.custom.MyTextView
            android:id="@+id/bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stars can't shine without darkness..."
            android:textSize="14dp"
            android:layout_gravity="center"/>



    </LinearLayout>






   <TextView
       android:id="@+id/add_friend"
       android:layout_width="200dp"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:gravity="center"

       android:text="ADD FRIEND"
       android:textColor="@color/edit_profile"
       android:textAlignment="center"
       android:background="@drawable/rounded"
       android:layout_marginTop="30dp"
       android:padding="10dp"
     />




    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ACACAC"
        android:layout_marginTop="40dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="10dp">
        <com.example.gaber.translation_chat.custom.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="256"
            android:textColor="@color/title_color"
            android:textStyle="bold"
            android:textSize="18dp" />
         <com.example.gaber.translation_chat.custom.MyTextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="Likes"
             android:textSize="14dp"/>

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="#ACACAC"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <com.example.gaber.translation_chat.custom.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,080"
                android:textColor="@color/title_color"
                android:textStyle="bold"
                android:textSize="18dp" />
            <com.example.gaber.translation_chat.custom.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Followers"
                android:textSize="14dp"/>

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="#ACACAC"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <com.example.gaber.translation_chat.custom.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="144"
                android:textColor="@color/title_color"
                android:textStyle="bold"
                android:textSize="18dp" />
            <com.example.gaber.translation_chat.custom.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Following"
                android:textSize="14dp"/>

        </LinearLayout>




    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ACACAC" />







    </LinearLayout>



    </ScrollView>







</RelativeLayout>



